<div class="swiper-slide">
  <div class="new-arrivals-product h-full">
    <a href="{{ product.url }}" class="block h-full">
      {% if product.featured_image %}
        <div class="aspect-square mb-4">
          {{
            product.featured_image
            | image_url: width: 400
            | image_tag: loading: 'lazy', class: 'w-full h-full object-cover'
          }}
        </div>
      {% endif %}
      <h3 class="text-base font-medium mb-1">{{ product.title }}</h3>
      <div class="text-sm text-gray-600 mb-3">{{ product.price | money }}</div>
    </a>
    <a
      href="{{ product.url }}"
      class="inline-block px-5 py-2.5 bg-black text-white text-sm rounded hover:bg-gray-800 transition"
    >
      {{ button_text }}
    </a>
  </div>
</div>
