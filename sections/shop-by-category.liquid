<style>
  .ctm-shop-cat-img-wrap {
    position: relative;
    width: 150px;
    height: 150px;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ctm-shop-cat-img {
    border-radius: 50%;
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .ctm-shop-cat-title {
    position: absolute;
    bottom: 0%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    padding: 6px 20px;
    border-radius: 25px;
    font-size: 1.05rem;
    font-weight: 700;
    letter-spacing: 0.7px;
    text-align: center;
    white-space: nowrap;
    pointer-events: none;
  }

  /* Responsive adjustments */
  @media (max-width: 950px) {
    .ctm-shop-cat-img-wrap {
      width: 100px;
      height: 100px;
    }
    .ctm-shop-cat-title {
      font-size: 0.85rem;
      padding: 4px 12px;
    }
  }
  @media (max-width: 570px) {
    .ctm-shop-cat-img-wrap {
      width: 60px;
      height: 60px;
    }
    .ctm-shop-cat-title {
      font-size: 0.62rem;
      padding: 2px 7px;
    }
  }
</style>

<div class="ctm-shop-cat-main {{ section.settings.extra_class }}">
  <div
    class="ctm-shop-cat-bg"
    {% if section.settings.background_image != blank %}
      style="background-image: url({{ section.settings.background_image | image_url: width: 1800 }}); background-size:cover; background-position:center;"
    {% endif %}
  >
    <div class="ctm-shop-cat-container page-width">
      {% if section.settings.heading != blank %}
        <h2 class="ctm-shop-cat-heading">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.caption != blank %}
        <div class="ctm-shop-cat-caption">
          {{ section.settings.caption }}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="ctm-shop-cat-list grid grid--2-col-tablet-down grid--{{ section.settings.columns_per_row }}-col-desktop">
          {% for block in section.blocks %}
            <div class="ctm-shop-cat-item grid__item" {{ block.shopify_attributes }}>
              {% if block.settings.collection_url != blank %}
                <a href="{{ block.settings.collection_url }}" class="ctm-shop-cat-link">
              {% endif %}

              <div class="ctm-shop-cat-img-wrap">
                {% if block.settings.collection_image != blank %}
                  <img
                    src="{{ block.settings.collection_image | image_url: width: 400 }}"
                    alt="{{ block.settings.collection_name | escape }}"
                    class="ctm-shop-cat-img"
                    loading="lazy"
                    width="auto"
                    height="auto"
                  >
                {% endif %}
                {% if block.settings.collection_name != blank %}
                  <span class="ctm-shop-cat-title">
                    {{ block.settings.collection_name }}
                  </span>
                {% endif %}
              </div>

              {% if block.settings.collection_url != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shop By Category",
  "class": "ctm-shop-cat-main",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    },
    {
      "type": "image_picker",
      "label": "Background Image",
      "id": "background_image"
    },
    {
      "type": "richtext",
      "label": "Caption",
      "id": "caption"
    },
    {
      "type": "richtext",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "range",
      "id": "columns_per_row",
      "label": "Columns per row",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "collection_list",
      "name": "Collection List",
      "settings": [
        {
          "type": "image_picker",
          "label": "Collection Image",
          "id": "collection_image"
        },
        {
          "type": "text",
          "label": "Collection Name",
          "id": "collection_name"
        },
        {
          "type": "url",
          "label": "Collection URL",
          "id": "collection_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop By Category"
    }
  ]
}
{% endschema %}
