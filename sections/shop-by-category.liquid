<style>
  .ctm-shop-cat-main {
    padding: 80px 0;
  }

  .ctm-shop-cat-bg {
    padding: 80px 0;
    background-size: cover;
    background-position: center;
  }

  .ctm-shop-cat-container {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .ctm-shop-cat-caption {
    text-align: center;
    margin-bottom: 12px;
    font-size: 0.75rem;
    letter-spacing: 2px;
    color: #6c6c6c;
    text-transform: uppercase;
  }

  .ctm-shop-cat-heading {
    text-align: center;
    margin-bottom: 48px;
    font-size: 2rem;
    font-weight: 700;
    color: #000;
  }

  .ctm-shop-cat-list {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: nowrap;
  }

  .ctm-shop-cat-item {
    text-align: center;
    width: 180px;
    transition: transform 0.3s ease;
  }

  .ctm-shop-cat-item:hover {
    transform: translateY(-6px);
  }

  .ctm-shop-cat-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ctm-shop-cat-img {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
  }

  .ctm-shop-cat-title {
    display: block;
    font-weight: 600;
    font-size: 1rem;
  }

  @media (max-width: 1024px) {
    .ctm-shop-cat-list {
      flex-wrap: wrap;
      gap: 32px;
    }
  }

  @media (max-width: 768px) {
    .ctm-shop-cat-img {
      width: 140px;
      height: 140px;
    }

    .ctm-shop-cat-item {
      width: 140px;
    }

    .ctm-shop-cat-title {
      font-size: 0.95rem;
    }

    .ctm-shop-cat-heading {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .ctm-shop-cat-img {
      width: 110px;
      height: 110px;
    }

    .ctm-shop-cat-item {
      width: 110px;
    }

    .ctm-shop-cat-title {
      font-size: 0.9rem;
    }

    .ctm-shop-cat-heading {
      font-size: 1.5rem;
    }

    .ctm-shop-cat-caption {
      font-size: 0.7rem;
    }
  }
</style>

<div class="ctm-shop-cat-main {{ section.settings.extra_class }}">
  <div
    class="ctm-shop-cat-bg"
    {% if section.settings.background_image != blank %}
      style="background-image: url({{ section.settings.background_image | image_url: width: 1800 }}); background-size:cover; background-position:center;"
    {% endif %}
  >
    <div class="ctm-shop-cat-container page-width">
      {% if section.settings.heading != blank %}
        <h2 class="ctm-shop-cat-heading">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.caption != blank %}
        <div class="ctm-shop-cat-caption">
          {{ section.settings.caption }}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="ctm-shop-cat-list grid grid--2-col-tablet-down grid--{{ section.settings.columns_per_row }}-col-desktop">
          {% for block in section.blocks %}
            <div class="ctm-shop-cat-item grid__item" {{ block.shopify_attributes }}>
              {% if block.settings.collection_url != blank %}
                <a href="{{ block.settings.collection_url }}" class="ctm-shop-cat-link">
              {% endif %}

              {% if block.settings.collection_image != blank %}
                <img
                  src="{{ block.settings.collection_image | image_url: width: 400 }}"
                  alt="{{ block.settings.collection_name | escape }}"
                  class="ctm-shop-cat-img"
                  loading="lazy"
                  width="auto"
                  height="auto"
                >
              {% endif %}

              {% if block.settings.collection_name != blank %}
                <span class="ctm-shop-cat-title">
                  {{ block.settings.collection_name }}
                </span>
              {% endif %}

              {% if block.settings.collection_url != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shop By Category",
  "class": "ctm-shop-cat-main",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    },
    {
      "type": "image_picker",
      "label": "Background Image",
      "id": "background_image"
    },
    {
      "type": "richtext",
      "label": "Caption",
      "id": "caption"
    },
    {
      "type": "richtext",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "range",
      "id": "columns_per_row",
      "label": "Columns per row",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "collection_list",
      "name": "Collection List",
      "settings": [
        {
          "type": "image_picker",
          "label": "Collection Image",
          "id": "collection_image"
        },
        {
          "type": "text",
          "label": "Collection Name",
          "id": "collection_name"
        },
        {
          "type": "url",
          "label": "Collection URL",
          "id": "collection_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop By Category"
    }
  ]
}
{% endschema %}
