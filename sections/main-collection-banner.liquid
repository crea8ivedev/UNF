{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{% comment %}
  Custom Collection Hero Section with Background Image and Swiper Slider
{% endcomment %}

{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .collection-hero-custom {
    position: relative;
    background-size: cover;
    background-position: center;
    padding: 6rem 1rem;
    color: #fff;
    text-align: center;
  }

  .collection-hero-custom .collection-title {
    font-size: 2.5rem;
    font-weight: bold;
  }

  .collection-hero-custom .breadcrumb {
    margin-top: 1rem;
    font-size: 1rem;
  }

  .collection-hero-custom .swiper {
    margin-top: 3rem;
    padding: 1rem 0;
  }

  .collection-hero-custom .swiper-slide {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .collection-hero-custom .swiper-slide img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 0.5rem;
    border: 2px solid #fff;
  }

  .collection-hero-custom .swiper-button-prev,
  .collection-hero-custom .swiper-button-next {
    color: #fff;
  }
{%- endstyle -%}
{% # theme-check-disable %}

<div class="collection-hero-custom" style="background-image: url({{ section.settings.background_image | image_url }})">
  <div class="page-width">
    <h1 class="collection-title">{{ collection.title }}</h1>
    <div class="breadcrumb">Home / {{ collection.title }}</div>

    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}">
              <div>{{ block.settings.title }}</div>
            </a>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.swiper', {
      slidesPerView: 2,
      spaceBetween: 16,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 3,
        },
        768: {
          slidesPerView: 5,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Collection Banner Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Slide Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Banner Slider"
    }
  ]
}
{% endschema %}
