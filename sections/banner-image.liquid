<style>
  /* FULL WIDTH SECTION + FIGMA MATCHED DESIGN + DECORATIVE FLOWER IMAGE (BOTTOM LEFT) */
  /* Make sure to update 'YOUR_FLOWER_IMAGE_URL' with the actual flower image asset path */

  .ctm-banner-image-main.main-ctm-banner-image {
    margin: 0;
    border-radius: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    background: #fff8ef;
    box-shadow: 0 6px 32px 0 rgba(194, 180, 157, 0.06);
    padding: 56px 48px;
    min-height: 375px;
    position: relative;
    box-sizing: border-box;
    overflow: visible;
  }

  .ctm-banner-image-main.main-ctm-banner-image::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 180px; /* Adjust if needed */
    height: 160px;
    background: url('https://cdn.shopify.com/s/files/1/0622/2633/3831/files/Leafs.png') no-repeat left bottom;
    background-size: contain;
    z-index: 1;
    pointer-events: none;
  }

  .ctm-banner-text-main {
    background: #fff;
    border-radius: 22px;
    box-shadow: 0 3px 24px 0 rgba(194, 180, 157, 0.08);
    padding: 54px 48px 36px 48px;
    max-width: 520px;
    min-width: 408px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-right: 18px;
    position: relative;
  }

  .ctm-banner-caption {
    color: #c1a265;
    letter-spacing: 2.2px;
    font-size: 13px;
    text-transform: uppercase;
    margin-bottom: 14px;
    font-weight: 600;
  }

  .ctm-banner-head {
    color: #231815;
    font-size: 2.1rem;
    font-weight: 700;
    margin-bottom: 18px;
    line-height: 1.22;
    letter-spacing: 0.02em;
  }

  .ctm-banner-head span {
    color: #b69857;
    font-weight: 700;
    font-size: 2.18rem;
    margin-right: 7px;
  }

  .ctm-banner-desc {
    color: #88867c;
    font-size: 1.07rem;
    margin-bottom: 32px;
    line-height: 1.62;
  }

  .ctm-banner-btn a {
    display: inline-block;
    background: linear-gradient(90deg, #a47d41, #c1a265);
    color: #fff;
    font-size: 1.02rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-decoration: none;
    padding: 14px 38px;
    border-radius: 9px;
    margin-bottom: 20px;
    margin-top: 2px;
    box-shadow: 0 2px 6px 0 rgba(194, 180, 157, 0.08);
    transition: background 0.17s;
  }

  .ctm-banner-btn a:hover {
    background: linear-gradient(90deg, #b69857, #a47d41);
  }

  .ctm-banner-caption-under {
    color: #bdbdbd;
    font-size: 14px;
    margin-top: 10px;
    letter-spacing: 0.13em;
  }

  .ctm-banner-image {
    display: flex;
    align-items: flex-end;
    min-width: 308px;
    max-width: 320px;
    justify-content: flex-end;
    padding-right: 12px;
    z-index: 2;
  }

  .ctm-banner-image img {
    width: 242px;
    height: auto;
    display: block;
    border-radius: 18px;
    box-shadow: 0 8px 34px 0 rgba(154, 33, 29, 0.1);
    object-fit: contain;
    position: relative;
    right: -7px;
    top: 0;
  }

  /* RESPONSIVE ADJUSTMENTS */
  @media (max-width: 1100px) {
    .ctm-banner-image-main.main-ctm-banner-image {
      flex-direction: column;
      min-height: unset;
      padding: 32px 5vw;
      max-width: 100vw;
      border-radius: 0;
    }
    .ctm-banner-text-main {
      margin: 0 0 20px 0;
      max-width: 97vw;
      min-width: 0;
      box-shadow: 0 2px 10px 0 rgba(194, 180, 157, 0.1);
      padding: 32px 15px 22px 15px;
      border-radius: 16px;
    }
    .ctm-banner-image {
      max-width: 74vw;
      justify-content: center;
      padding-right: 0;
    }
    .ctm-banner-image img {
      width: 152px;
      border-radius: 12px;
      box-shadow: 0 3px 16px 0 rgba(154, 33, 29, 0.1);
      right: 0;
    }
    .ctm-banner-image-main.main-ctm-banner-image::before {
      width: 100px;
      height: 80px;
    }
  }
</style>
<div class="{{ section.settings.extra_class }} main-ctm-banner-image">
  <div class="ctm-banner-text-main">
    {% if section.settings.caption != blank %}
      <div class="ctm-banner-caption">
        <p>{{ section.settings.caption }}</p>
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <div class="ctm-banner-head">
        {{ section.settings.heading }}
      </div>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="ctm-banner-desc">
        {{ section.settings.description }}
      </div>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <div class="ctm-banner-btn">
        <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}

    {% if section.settings.caption_under_text != blank %}
      <div class="ctm-banner-caption-under">
        <p>{{ section.settings.caption_under_text }}</p>
      </div>
    {% endif %}
  </div>

  {% if section.settings.banner_image != blank %}
    <div class="ctm-banner-image">
      <img src="{{ section.settings.banner_image | image_url }}" height="auto" width="auto" alt="banner image">
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Banner Image",
  "class": "ctm-banner-image-main",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    },
    {
      "type": "text",
      "label": "Caption",
      "id": "caption"
    },
    {
      "type": "html",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "Description",
      "id": "description"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text"
    },
    {
      "type": "url",
      "label": "Button URL",
      "id": "button_url"
    },
    {
      "type": "text",
      "label": "Caption Under text",
      "id": "caption_under_text"
    },
    {
      "type": "image_picker",
      "label": "Banner Image",
      "id": "banner_image"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Banner Image"
    }
  ]
}
{% endschema %}
