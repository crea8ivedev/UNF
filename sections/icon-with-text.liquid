<style>
  .ctm-main-hp-icon-text.container_fluid {
    background-color: #7a5428; /* Brown background */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 22px 0;
    width: 100%;
    box-sizing: border-box;
  }

  /* Each block container with icon and text */
  .ctm-main-hp-icon-text .ctm-icon-text {
    display: flex;
    flex-direction: row;
    align-items: center;
    min-width: 180px;
    margin: 0 24px;
    color: #fff;
  }

  /* Circular white background for icon */
  .ctm-main-hp-icon-text .ctm-icon-img {
    height: 62px;
    width: 62px;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 18px;
    flex-shrink: 0;
    box-shadow: 0 2px 6px rgba(30, 25, 20, 0.08);
  }

  /* The icon image inside the circle */
  .ctm-main-hp-icon-text .ctm-icon-img img {
    height: 32px;
    width: 32px;
    object-fit: contain;
    display: block;
    /* Uncomment below if icon is dark and needs to be white 
  filter: brightness(0) invert(1); */
  }

  /* Text container */
  .ctm-main-hp-icon-text .ctm-text-icon {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  /* Heading inside text container */
  .ctm-main-hp-icon-text .ctm-text-icon > *:first-child {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 4px;
    line-height: 1.15;
    color: #fff;
  }

  /* Description inside text container */
  .ctm-main-hp-icon-text .ctm-text-icon > *:nth-child(2) {
    font-size: 13px;
    color: #efe5db;
    opacity: 0.9;
    line-height: 1.3;
  }

  /* Responsive styling for tablets */
  @media (max-width: 900px) {
    .ctm-main-hp-icon-text.container_fluid {
      flex-direction: column;
      align-items: stretch;
      padding: 12px 0;
    }
    .ctm-main-hp-icon-text .ctm-icon-text {
      margin: 16px 0;
      min-width: unset;
      justify-content: flex-start;
    }
  }

  /* Responsive styling for mobile */
  @media (max-width: 600px) {
    .ctm-main-hp-icon-text.container_fluid {
      padding: 6px 0;
    }
    .ctm-main-hp-icon-text .ctm-icon-text {
      flex-direction: column;
      align-items: center;
      text-align: center;
      margin: 14px 0;
    }
    .ctm-main-hp-icon-text .ctm-icon-img {
      margin-right: 0;
      margin-bottom: 10px;
    }
    .ctm-main-hp-icon-text .ctm-text-icon {
      align-items: center;
      text-align: center;
    }
  }
</style>
<div class="{{ section.settings.extra_class }} ctm-main-hp-icon-text container_fluid">
  {% for block in section.blocks %}
    <div class="ctm-icon-text">
      <div class="ctm-icon-img">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | image_url }}" width="auto" height="auto" alt="icon-with-text">
        {% endif %}
      </div>
      <div class="ctm-text-icon">
        {% if block.settings.head != blank %}
          {{ block.settings.head }}
        {% endif %}
        {% if block.settings.description != blank %}
          {{ block.settings.description }}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Icon with Text",
  "class": "ctm-icon-with-text",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    }
  ],
  "blocks": [
    {
      "type": "icon_and_text",
      "name": "Icon and Text",
      "settings": [
        {
          "type": "image_picker",
          "label": "Icon",
          "id": "icon"
        },
        {
          "type": "richtext",
          "label": "Head",
          "id": "head"
        },
        {
          "type": "richtext",
          "label": "Description",
          "id": "description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon with Text"
    }
  ]
}
{% endschema %}
