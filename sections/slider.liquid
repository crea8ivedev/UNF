<style>
.ctm-slider-main {
  position: relative;
  height: 900px;
}

.ctm-slider-main .swiper {
  height: 100%;
}

.ctm-slider-main .swiper-wrapper {
  height: 100%;
}

.swiper-slide {
  position: relative;
  min-height: 400px;
  height: 900px;
  color: #fff;
  background-size: cover;
  background-position: center;
}

.slider-item {
  text-align: center;
  padding: 20px;
}

.slider-image img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.slider-heading {
  font-size: 2rem;
  margin-top: 10px;
}

.slider-description {
  margin-top: 10px;
  color: #333;
}

.slider-button {
  display: inline-block;
  margin-top: 15px;
  padding: 10px 20px;
  background: #000;
  color: #fff;
  text-decoration: none;
}

.slider-content-content-align-left,
.slider-content-content-align-center,
.slider-content-content-align-right {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 2rem;
  background: linear-gradient(90deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 100%);
  z-index: 2;
}

/* Alignment modifiers */
.slider-content-content-align-left {
  align-items: flex-start;
  text-align: left;
}

.slider-content-content-align-center {
  align-items: center;
  text-align: center;
}

.slider-content-content-align-right {
  align-items: flex-end;
  text-align: right;
}
</style>


<div class="ctm-slider-main {{ section.settings.extra_class }}">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == "slider_content" %}
          <div class="swiper-slide" {{ block.shopify_attributes }}
            style="background-image: url('{{ block.settings.slider_image | image_url: width: 2000 }}'); background-size: cover; background-position: center;">
            <div class="slider-content-content-align-{{ block.settings.content_alignment }}">
              {% if block.settings.heading != blank %}
                <div class="slider-heading">
                  {{ block.settings.heading }}
                </div>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="slider-description">
                  {{ block.settings.description }}
                </div>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="slider-button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-pagination"></div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.ctm-slider-main .swiper', {
      loop: true,
      speed: 600,
      slidesPerView: 1,
      navigation: {
        nextEl: '.ctm-slider-main .swiper-button-next',
        prevEl: '.ctm-slider-main .swiper-button-prev',
      },
      pagination: {
        el: '.ctm-slider-main .swiper-pagination',
        clickable: true,
      },
    });
  });
</script>


{% schema %}
{
  "name": "Slider",
  "class": "ctm-slider-main",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    }
  ],
  "blocks": [
    {
      "type": "slider_content",
      "name": "Slider Content",
      "settings": [
        {
          "type": "image_picker",
          "label": "Slider Image",
          "id": "slider_image"
        },
        {
         "type": "select",
         "id": "content_alignment",
         "label": "Content Alignment",
         "options": [
            { "label": "Left", "value": "left" },
            { "label": "Center", "value": "center" },
            { "label": "Right", "value": "right" }
        ],
          "default": "center"
        },
        {
          "type": "richtext",
          "label": "Heading",
          "id": "heading"
        },
        {
          "type": "richtext",
          "label": "Description",
          "id": "description"
        },
        {
          "type": "text",
          "label": "Button Text",
          "id": "button_text"
        },
        {
          "type": "url",
          "label": "Button URL",
          "id": "button_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider"
    }
  ]
}
{% endschema %}