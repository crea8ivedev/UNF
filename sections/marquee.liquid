<style>
  /* Modern Seamless Marquee */
  .marquee-container {
    width: 100%;
    overflow: hidden;
    background: var(--marquee-bg, #f5f5f5);
    padding: 1rem 0;
    position: relative;
  }

  .marquee-track {
    display: flex;
    width: fit-content;
    animation: marquee-scroll linear infinite;
    animation-duration: var(--duration, 40s);
    animation-direction: var(--direction, normal);
  }

  /* This block removed:
.marquee-track:hover {
  animation-play-state: paused;
}
*/

  .marquee-group {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    gap: 3rem;
    padding: 0 2rem;
  }

  .marquee-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .marquee-item img {
    width: 32px;
    height: 32px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .marquee-item__text {
    font-size: 1rem;
    color: #1a1a1a;
  }

  @keyframes marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .marquee-group {
      gap: 2rem;
    }
    .marquee-item img {
      width: 28px;
      height: 28px;
    }
  }

  @media (max-width: 480px) {
    .marquee-group {
      gap: 1.5rem;
    }
    .marquee-item img {
      width: 24px;
      height: 24px;
    }
  }
</style>
{% # theme-check-disable %}
<div class="marquee-container {{ section.settings.extra_class }}">
  <div
    class="marquee-track"
    style="--duration: {{ 80 | divided_by: section.settings.speed }}s; --direction: {% if section.settings.direction == 'right' %}reverse{% else %}normal{% endif %}"
  >
    <!-- We need to duplicate the content 4x to ensure seamless looping -->
    {% for i in (1..4) %}
      <div class="marquee-group">
        {% for block in section.blocks %}
          <div class="marquee-item">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: '64x64' }}"
                alt="{{ block.settings.text | escape }}"
                width="32"
                height="32"
              >
            {% endif %}
            {% if block.settings.text %}
              <span class="marquee-item__text">{{ block.settings.text }}</span>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Seamless Marquee Banner",
  "settings": [
    {
      "type": "text",
      "id": "extra_class",
      "label": "Extra class"
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direction",
      "options": [
        { "value": "left", "label": "Right to Left" },
        { "value": "right", "label": "Left to Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seamless Marquee Banner"
    }
  ]
}
{% endschema %}
